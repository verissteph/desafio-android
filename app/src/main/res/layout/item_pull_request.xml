<?xml version="1.0" encoding="utf-8"?>
<!-- Incluir cores no colors.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_pull"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#dee2e6">

<!--  Substituir por ConstraintLayout para deixar a hierarquia mais rasa  -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">
            <TextView
                android:id="@+id/pull_request_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#3981BC"
                android:text="@string/testando"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/pull_request_descricao"
                android:layout_width="374dp"
                android:layout_height="40dp"
                android:layout_below="@+id/pull_request_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:text="@string/descri_o_pull_request"
                android:textSize="16sp" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/foto_usuario_pull_request"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_user"
                app:shapeAppearanceOverlay="@style/circleImageViewStyle"/>

            <TextView
                android:id="@+id/pull_request_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/pull_request_descricao"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/foto_usuario_pull_request"
                android:text="@string/nome_completo_pull"
                android:textColor="#3981BC"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/pull_request_date"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@+id/pull_request_descricao"
                android:layout_marginStart="300dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:text="@string/date"
                android:textAlignment="center" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>